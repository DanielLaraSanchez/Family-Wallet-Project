
<div class="box">

<h1>  <a href="/index">HomePage</a></p> </h1>


<p class="btn--wrapper">
  <a class="btn btn--action" href="/transactions/new_transaction">New Transaction</a>
</p>











<% for transaction in @transactions do %>

        <p> Date : <%= transaction.date_of_transaction %></p>
        <p> Issuer : <%= transaction.issuer %></p>
        <p> Account : <%= transaction.account_id %></p>
        <p> Type : <%= transaction.type %></p>
        <p> Amount : <%= transaction.quantity %></p>
        
<p><a href="/transactions/<%= transaction.id %>">This Transaction</a></p>
    <hr/>
<% end %>
</div>
